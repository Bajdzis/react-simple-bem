{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 10
	},
	"plugins": [
		"@typescript-eslint",
		"react"
	],
	"rules": {
		"indent": [
			"error",
			4
		],
		"linebreak-style": [
			0
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"eol-last": [
			"error",
			"always"
		],
		"react/prop-types": [
			"error"
		],
		"react/jsx-uses-vars": [
			"error"
		]
	},
	"overrides": [
		{
			"files": [
				"**/*.ts",
				"**/*.tsx"
			],
			"parser": "@typescript-eslint/parser",
			"parserOptions": {
				"project": "./tsconfig.spec.json",
				"sourceType": "module",
				"ecmaVersion": 10
			},
			"rules": {
				"no-unused-vars": [
					"off"
				],
				"no-undef": [
					"off"
				],
				"@typescript-eslint/no-unused-vars": [
					"error"
				],
				"@typescript-eslint/typedef": [
					"error",
					{
						"parameter": false,
						"arrowParameter": true,
						"variableDeclaration": true,
						"arrayDestructuring": true,
						"memberVariableDeclaration": true,
						"objectDestructuring": true,
						"propertyDeclaration": true
					}
				]
			}
		}
	]
}